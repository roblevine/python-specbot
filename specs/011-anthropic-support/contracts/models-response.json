{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Models Response",
  "description": "GET /api/v1/models response with multi-provider support",
  "type": "object",
  "required": ["models"],
  "properties": {
    "models": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "provider", "default"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "description": "Model identifier (e.g., 'gpt-4', 'claude-3-5-sonnet-20241022')"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50,
            "description": "Human-readable display name"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200,
            "description": "Brief model description"
          },
          "provider": {
            "type": "string",
            "enum": ["openai", "anthropic"],
            "description": "AI service provider identifier"
          },
          "default": {
            "type": "boolean",
            "description": "Whether this is the default model"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "models": [
        {
          "id": "gpt-4",
          "name": "GPT-4",
          "description": "Most capable OpenAI model",
          "provider": "openai",
          "default": false
        },
        {
          "id": "claude-3-5-sonnet-20241022",
          "name": "Claude 3.5 Sonnet",
          "description": "Most capable Claude model for complex tasks",
          "provider": "anthropic",
          "default": true
        },
        {
          "id": "claude-3-haiku-20240307",
          "name": "Claude 3 Haiku",
          "description": "Fast and efficient for simple tasks",
          "provider": "anthropic",
          "default": false
        }
      ]
    }
  ]
}
