// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:3.13",

	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "latest"
		}
	},

	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"streetsidesoftware.code-spell-checker",
				"ms-python.vscode-pylance",
				"ms-python.python",
				"ms-python.debugpy",
				"DotJoshJohnson.xml",
				"ms-python.black-formatter",
				"alexcvzz.vscode-sqlite",
				"eamodio.gitlens",
				"Anthropic.claude-code"
			]
		}
	},

	// Load SSH keys from .env_devcontainer file
	"runArgs": [
		"--name", "python-specbot_devcontainer",
		"--env-file", "${localWorkspaceFolder}/.devcontainer/.env_devcontainer"
	],

	"appPort": ["2203:22"],
	"portsAttributes": {
		"22": {
			"label": "SSH",
			"onAutoForward": "notify"
		}
	},
	
	"shutdownAction": "stopContainer",
	"postCreateCommand": "sh .devcontainer/installation.sh",
	"postStartCommand": "sudo service ssh start",
	"remoteUser": "vscode"
}
